{
    "name": "php-architecture-training/challenges",
    "description": "Programme de formation en architecture logicielle pour d√©veloppeurs PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Formation Architecture PHP",
            "email": "formation@example.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "": "challenges/session-01/src/",
            "Session02\\": "challenges/session-02/src/",
            "Session03\\": "challenges/session-03/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "challenges/session-01/tests/",
            "Session02Tests\\": "challenges/session-02/tests/",
            "Session03Tests\\": "challenges/session-03/tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs --standard=PSR12 challenges/session-01/src/ challenges/session-02/src/ challenges/session-03/src/",
        "cs-fix": "phpcbf --standard=PSR12 challenges/session-01/src/ challenges/session-02/src/ challenges/session-03/src/",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
